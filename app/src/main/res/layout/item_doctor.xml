<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/profile_doctor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/inter_tight_semi_bold"
                android:text="Nama Dokter"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/iv_profile" />

            <TextView
                android:id="@+id/tv_special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter_tight_regular"
                android:text="spesialis apa"
                android:textColor="#666D80"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <ImageView
                android:id="@+id/ic_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_rs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_special" />

            <TextView
                android:id="@+id/tv_hospital_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_tight_regular"
                android:text="nama rs"
                android:textColor="#666D80"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/ic_rs"
                app:layout_constraintStart_toEndOf="@id/ic_rs"
                app:layout_constraintTop_toTopOf="@id/ic_rs" />

            <ImageView
                android:id="@+id/ic_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_number"
                app:layout_constraintEnd_toStartOf="@+id/tv_number"
                app:layout_constraintTop_toBottomOf="@id/tv_special" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/inter_tight_regular"
                android:text="000000"
                android:textColor="#666D80"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/ic_rs"
                app:layout_constraintEnd_toStartOf="@+id/ic_day_work"
                app:layout_constraintStart_toEndOf="@+id/tv_hospital_address"
                app:layout_constraintTop_toTopOf="@id/ic_call" />

            <ImageView
                android:id="@+id/ic_day_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_work"
                app:layout_constraintEnd_toStartOf="@+id/tv_day_work"
                app:layout_constraintTop_toBottomOf="@id/tv_special" />

            <TextView
                android:id="@+id/tv_day_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/inter_tight_regular"
                android:text="senin - selasa"
                android:textColor="#666D80"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/ic_day_work"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ic_day_work" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>